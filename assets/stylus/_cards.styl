.card
	// ==================
	// alinhamento
	// ==================
	&-center
		@extends .txt-center
		

	// ==================
	// lista
	&-grid
		> ul
			@extends .flex
			flex-wrap wrap
			
			
			> li
				@extends .col-xs-12
			
					
	&-grid--two-cols
		@extends .card-grid
		
		> ul
			> li
				@media (min-width tablet)
					@extends .col-sm-6
				
	&-grid--three-cols
		@extends .card-grid
		
		> ul
			> li
				@media (min-width oldMobile) and (max-width tablet - 1)
					flex-basis: 50%;
					max-width: 50%;
					
				@media (min-width tablet)
					flex-basis: 33.333%;
					max-width: 33.333%;
					
	&-grid--four-cols
		@extends .card-grid
		
		> ul
			> li
				@media (min-width oldMobile) and (max-width tablet - 1)
					flex-basis: 50%;
					max-width: 50%;
					
				@media (min-width tablet) and (max-width desktopSmall - 1)
					flex-basis: 33.333%;
					max-width: 33.333%;
					
				@media (min-width desktopSmall)
					@extends .col-sm-3
					
	&-grid--five-cols
		@extends .card-grid
		
		> ul
			> li
				@media (min-width oldMobile) and (max-width tablet - 1)
					flex-basis: 50%;
					max-width: 50%;
					
				@media (min-width tablet) and (max-width desktopSmall - 1)
					flex-basis: 33.333%;
					max-width: 33.333%;
					
				@media (min-width desktopSmall)
					flex-basis: 20%;
					max-width: 20%;
					
	&-grid--servicos
		@extends .card-grid--four-cols
		
		li
			background-color rgba(#341d53, .8)
			

	// =======================
	&-video--fullscreen
		@extends .relative
		max-height 100vh
		overflow hidden
		
		.overlay-video
			@extends .absolute
			background-color rgba(black, .8)
			display block
			height 100%
			left 0
			top 0
			width 100%
			z-index 1
		

	&-welcome
		@extends .absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		z-index 2
		
		.logo
			svg
				height 73px
				width 247px
				
				g
					path
						fill white
				
				
	&-simple-text
		@extends .txt-center
		padding 130px 0
		
		.title
			font-size 18px
			
			&:after
				background-color darkColorMaster
				content ''
				display block
				height 1px
				margin 20px auto 40px
				width 200px
			
			@media (min-width tablet)
				font-size 32px
				
		.simple-text
			custom-size(900px)
			
		.text
			custom-size(860px)
			
			p
				font-size 18px
				margin-bottom 24px
				
	// ====================
	&-banner--servicos
		background-size cover
		padding 190px 0
		
		@extends .txt-center
		
		> .row
			custom-size(siteWidth)
		
		p
		h2
		h3
			@extends .color-white
			
		h2
			margin-bottom 80px