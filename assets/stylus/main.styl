// ========================
// breadcrumb
// ========================	
.block-breadcrumb
	padding-top 140px
	
	ol
		@extends .flex
		
		li
			font-size 13px
			
			+ li
				&:before
					content '\203a'
					margin 0 10px

// ========================
// list
// ========================		
.list-jobs
	> ul
		@extends .flex
		flex-flow row wrap
		
		> li
			padding 15px
			
			a
				// background-color #fafafa
				margin-bottom 30px
				padding 20px
				
			figure
				@extends .flex
				flex-flow column wrap
				
				img
					@extends .img-responsive
					
			.picture
				@extends .relative
				
			figcaption
				@extends .relative
				z-index 10

					
			h3
				@extends .transicao
				background-color white
				padding-right 9px
				padding-top 4px
			
			h4
				@extends .transicao
				padding-right 9px
				padding-top 4px
				transition-delay .1s

			&:nth-child(even)
				figure
					margin-top 20px
					
					figcaption
						@media (min-width tablet)
							order -1
							
				.picture
					line-height 0
					
					&:before
					&:after
						@extends .absolute
						background-color lightColorMaster
						bottom -5px
						content ''
						right -5px
						transition .4s ease
					
					&:before
						height 0
						width 0
						
					&:after
						height 0
						width 0

				h3
					position relative
					z-index 1

				h4
					background-color white
					display inline-block
						
				a
					&:hover
						h3
						h4
							transform translateY(25px)
							
						.picture
							&:before
								height 5px
								width 170px
								
							&:after
								height 170px
								width 5px
						
			&:nth-child(odd)
				figure
					margin-bottom 20px
				
				h3
					display inline-block
					
				.picture
					&:before
					&:after
						@extends .absolute
						content ''
						background-color lightColorMaster
						right -5px
						top -5px
						transition .4s ease
					
					&:before
						height 0
						width 0
						
					&:after
						height 0px
						width 0

				a
					&:hover
						h3
						h4
							transform translateY(-30px)
							
						.picture
							&:before
								height 5px
								width 170px
								
							&:after
								height 170px
								width 5px
							



botao(borda, corFont, paddingTopBottom, paddingLateral)
	border 1px borda solid
	border-radius 8px
	color corFont
	display inline-block
	font italic 19px georgia
	overflow hidden
	padding-bottom paddingTopBottom
	padding-left paddingLateral
	padding-right paddingLateral
	padding-top paddingTopBottom
	position relative
	transform translateZ(0)
	
	&:before
		background darkColorTwo
		bottom 0
		content ''
		left 0
		position absolute
		right 0
		top 0
		z-index -1
		width 0
		transicao()
		
	&:hover
		background darkColorTwo
		color white
		transition .3s color ease 0s, .4s background ease .3s
		
		&:before
			width 100%
			
.cta
	a
		botao(darkColorTwo, black, 12px, 17px)

